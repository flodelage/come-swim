<%= simple_form_for @swimming_pool do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>

  <%= f.input :description %>

  <%= f.input :address %>

  <%= f.input :length %>

  <%= f.input :width %>

  <%= f.input :heated, as: :radio_buttons %>

  <%= f.input :capacity %>

  <%= f.input :price %>

  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
