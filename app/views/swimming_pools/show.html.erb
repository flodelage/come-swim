<div class="page-booking">
  <img src="https://images.pexels.com/photos/261045/pexels-photo-261045.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260">
  <div class="container d-flex mt-5">
    <div class="row">
      <div class="col-8">
        <div class="card-product-booking">
          <div class="card-product-booking-infos">
            <div class="card-product-booking-pricing">
              <h2 class="card-product-booking-price"><%= @swimming_pool.price %>€</h2>
              <span>par personne</span>
              <span>(la journée)</span>
            </div>
            <div class="card-product-booking-title">
              <h2><%= @swimming_pool.name %></h2>
              <span>proposé par Bernard de Lavillardière</span>
            </div>
          </div>
        </div>
        <div class="booking-swimming-pool-info">
          <h3>Description</h3>
          <p><%= @swimming_pool.description %></p>
        </div>
        <div class="booking-swimming-pool-info">
          <h3>Taille de la piscine</h3>
          <p>Longueur: <%= @swimming_pool.length %> m / Largeur: <%= @swimming_pool.width %> m</p>
        </div>
        <div class="booking-swimming-pool-info">
          <h3>Piscine chauffée</h3>
          <% if @swimming_pool.heated %>
            <%= "oui" %>
          <% else %>
            <%= "non" %>
          <% end %>
        </div>
        <div class="booking-swimming-pool-info">
          <h3>Capacité d'accueil</h3>
          <p><%= @swimming_pool.capacity %> personnes</p>
        </div>
      </div>
      <div class="col-4">
        <div class="form-booking">
          <h3 class="form-booking-title">Réserver cette piscine</h3>
          <%= simple_form_for [@swimming_pool, @booking] do |f| %>
            <%= f.error_notification %>
            <%= f.input :date %>
            <%= f.input :participant %>

            <%= f.button :submit, class: "btn-primary" %>
            <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
